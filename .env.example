# Application Settings
APP_NAME=DeepDive Tracking
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://deepdive:deepdive_password@localhost:5432/deepdive_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External APIs
OPENAI_API_KEY=sk-proj-YOUR_API_KEY_HERE
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# RSS and Web Crawling
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Content Processing
MIN_CONTENT_LENGTH=100
MAX_CONTENT_LENGTH=100000
SIMILARITY_THRESHOLD=0.8

# Publishing Channels
WECHAT_API_URL=https://api.weixin.qq.com
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

XIAOHONGSHU_API_URL=https://api.xiaohongshu.com
XIAOHONGSHU_TOKEN=your_xiaohongshu_token

# Admin User (Development Only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin_password_change_in_production

# Security
SECRET_KEY=your_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Feature Flags
ENABLE_AI_SCORING=True
ENABLE_DUPLICATE_DETECTION=True
ENABLE_AUTO_PUBLISHING=False
ENABLE_ANALYTICS=True

# Notification
NOTIFICATION_EMAIL=admin@deepdive.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
